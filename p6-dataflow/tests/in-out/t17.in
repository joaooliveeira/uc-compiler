/* Bubble sort code */

int main()
{
  int array[100], n, c, d, swap;

  print("Enter number of elements");
  print();
  n = 25;

  print("Enter ", n, " integers");
  print();

  for (c = 0; c < n; c++)
    array[c] = n-c;

  for (c = 0; c < n; c++)
     print(array[c], " ");
  print();

  for (c = 0 ; c < n - 1; c++)
  {
    for (d = 0 ; d < n - c - 1; d++)
    {
      if (array[d] > array[d+1]) /* For decreasing order use < */
      {
        swap       = array[d];
        array[d]   = array[d+1];
        array[d+1] = swap;
      }
    }
  }

  print("Sorted list in ascending order:");
  print();

  for (c = 0; c < n; c++)
     print(array[c], " ");

  return 0;
}
